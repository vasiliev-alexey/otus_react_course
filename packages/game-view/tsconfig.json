{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "dom", "dom.iterable"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "composite": true,

    "paths": {
      "@src/*": ["src/*"],
      "@store/*": ["src/store/*"],
      "@ui/*": ["src/components/*"],
      "@gameUi/*": ["src/components/game/*"],
      "@authUi/*": ["src/components/auth/*"],
      "@api/*": ["src/api/*"],
      "@images/*": ["../assets/images/*"],
      "@sounds/*": ["../assets/sounds/*"],
      "@css/*": ["public/*"]
    }
  },

  "references": [{ "path": "../game-engine" }]
}
